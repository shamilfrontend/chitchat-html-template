- var feathericon             = true;
include ../components/mixin
doctype html
html(lang='en')
  include ../components/header-files

  body
    .login-page2.animat-rate
      .login-content-main 
        .login-content
            .login-content-header
              img(src='../assets/images/logo/landing-logo.png' alt='sign-logo')
            h3 Hello Everyone , We are Chitchat
            h4 Wellcome to chitchat please signup to your account.
            form.form2
                  .form-group
                    label.col-form-label(for='inputPassword3') New Password
                    span 
                    input#inputPassword3.form-control(type='password', name='login[password]', required='' placeholder="*********")
                  .form-group
                    label.col-form-label(for='inputPassword3') Retype Password
                    span 
                    input#inputPassword4.form-control(type='password', name='login[password]', required='' placeholder="*********")
                  .form-group
                    .rememberchk                   
                        input#gridCheck1.form-check-input(type='checkbox')
                        label.form-check-label.ps-4(for='gridCheck1')
                            | Remember password
                  ul.medialogo
                    li
                      a.icon-btn.btn-facebook.button-effect.rouded15(href='https://www.facebook.com/')
                        i.fa.fa-facebook-f
                    li
                      a.icon-btn.btn-danger.button-effect.rouded15(href='https://www.google.com/')
                        i.fa.fa-google
                    li
                      a.icon-btn.btn-primary.button-effect.rouded15(href='https://twitter.com/')
                        i.fa.fa-twitter
                  .form-group.mb-0
                    .buttons
                      a.btn.button-effect.btn-primary.signpbtn(href='messenger.html') Signup

      .animat-block
        +animation2